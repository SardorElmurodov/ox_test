{% block title %}Input{% endblock %}

{% block body %}
    <h1>Input</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ input.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ input.quantity }}</td>
            </tr>
            <tr>
                <th>Amount</th>
