{% extends 'base.html.twig' %}

{% block title %}Output index{% endblock %}

{% block body %}
    <h1>Output index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Amount</th>
                <th>Output_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for output in outputs %}
            <tr>
                <td>{{ output.id }}</td>
                <td>{{ output.quantity }}</td>
                <td>{{ output.amount }}</td>
                <td>{{ output.outputDate ? output.outputDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('output_show', {'id': output.id}) }}">show</a>
                    <a href="{{ path('output_edit', {'id': output.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('output_new') }}">Create new</a>
{% endblock %}
